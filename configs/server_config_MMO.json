{
  "host": "127.0.0.1",
  "port": 8888,

  "version": "rust",

  "logger": {
    "log_level": "INFO",
    "enable_console_log": false,
    "console_log_format": "\u001b[92m%(asctime)s\u001b[0m - \u001b[94m%(name)s\u001b[0m - %(levelname)s - %(message)s",
    "enable_file_log": false,
    "enable_json_log": false,
    "log_file_path": "logs/",
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "max_file_size": 2000000,
    "backup_count": 5,
    "date_format": "%Y-%m-%d %H:%M:%S.%3f",
    "log_keys": null
  },

  "hyper_parameters": {
    "connection_buffer_size": 512,
    "command_buffer_size": 128,
    "control_channel_capacity": 16,
    "queue_monitor_capacity": 100,

    "client_timeout_secs": 300,
    "rate_limit_msgs_per_minute": 240000,
    "timeout_check_interval_secs": 20,
    "accept_error_backoff_ms": 50,

    "quarantine_cooldown_secs": 300,
    "quarantine_cleanup_interval_secs": 60,

    "throttle_delay_ms": 100,
    "flow_control_delay_ms": 400,

    "worker_threads": 4,

    "backpressure_policy": {
      "enable_throttle": true,
      "throttle_threshold": 500,
      "enable_flow_control": true,
      "flow_control_threshold": 1500,
      "enable_disconnect": true,
      "disconnect_threshold": 3000
    }
  }
}
